<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"

  tools:context="com.stassh.reader.MainActivity"
  tools:showIn="@layout/app_bar_main"


  >

  <android.support.v7.widget.CardView
    style="@style/home_card">
    <TextView
      style="@style/home_card.title"
      android:text="Hello World1!" />
  </android.support.v7.widget.CardView>

  <ListView android:id="@+id/last_books_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.CardView
    style="@style/home_card"
    >
    <TextView
      style="@style/home_card.title"
      android:text="Hello World2!" />
  </android.support.v7.widget.CardView>

  <LinearLayout
    style="@style/home_card"
    >
    <TextView
      style="@style/home_card.title"
      android:text="Hello World3!" />
    <ListView android:id="@+id/home_catalog_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</LinearLayout>
